<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar" />

    <FrameLayout android:id="@+id/fam"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >     
        <ImageView
            android:id="@+id/wallpaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scaleType="centerCrop"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" >

            <Gallery
                android:id="@+id/gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </FrameLayout>
    </FrameLayout>
    <View android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#424242" />
    <LinearLayout 
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >
        <View android:id="@+id/view_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#424242" />
        <Button 
            android:id="@+id/set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_effect_two"
            android:onClick="onSetWallpapers"
            android:text="@string/set_wallpaper"
            android:textColor="@color/my_text_color"
            android:textSize="20sp" />
        <View android:id="@+id/view_three"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#424242" />
        <LinearLayout android:id="@+id/showsAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/my_primary_color"
            android:visibility="gone" >

            <com.appodeal.ads.BannerView
                android:id="@+id/appodealBannerView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:background="#212121">
            <RelativeLayout android:id="@+id/test_lay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Test ept"
                    android:gravity="center_horizontal"/>
            </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>  
</LinearLayout>